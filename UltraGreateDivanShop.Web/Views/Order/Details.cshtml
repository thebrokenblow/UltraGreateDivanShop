@using UltraGreateDivanShop.Domain;
@model Order

<div class="container mt-5">
    @foreach (var product in Model.Products)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div>
                            <img src="@product.PreviewImg"
                                 class="img-fluid rounded-3" alt="@product.Title" style="width: 65px;">
                        </div>
                        <div class="ms-3">
                            <h5>@product.Title</h5>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center gap-4">
                        <h5 class="mb-0">@product.Price ₽</h5>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" type="button" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="d-flex gap-3 mt-4">
        <h5 class="mb-2">Итог: </h5>
        <h5 class="mb-2">@Model.Price ₽</h5>
    </div>
</div>